# KubeMemory â€” copy to .env and fill in real values. Never commit .env.
# === DJANGO ===
DJANGO_SECRET_KEY=change-me-use-python-secrets-token-hex-32
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.dev

# === DATABASE (Postgres) ===
POSTGRES_DB=kubememory
POSTGRES_USER=kubememory
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# === REDIS ===
REDIS_URL=redis://redis:6379/0

# === CELERY ===
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# === OLLAMA (embedding + chat models) ===
OLLAMA_BASE_URL=http://ollama:11434
# Chat model for recommendations. If not available, app uses first model from ollama (e.g. qwen2.5:0.5b).
# Small/fast: qwen2.5:0.5b. Larger: mistral:7b, llama3.2:3b
OLLAMA_CHAT_MODEL=qwen2.5:0.5b
OLLAMA_EMBED_MODEL=nomic-embed-text

# === CHROMADB (vector store for incidents) ===
CHROMA_PERSIST_DIR=/app/chroma_data
CHROMA_COLLECTION_NAME=kubememory_incidents

# === NEO4J (graph store; no credentials in source) ===
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me-strong-password

# === KUBERNETES WATCHER ===
K8S_IN_CLUSTER=False
K8S_KUBECONFIG_PATH=/root/.kube/config
K8S_NAMESPACES=default,production,staging
K8S_WATCH_TIMEOUT=600

# === CHANNEL LAYERS (WebSocket) ===
CHANNEL_LAYERS_HOST=redis
CHANNEL_LAYERS_PORT=6379

# === CORS & CSRF (for SPA on 5173) ===
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
